# Database
MONGODB_URI=mongodb://localhost:27017/file-management

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# FTP Server
FTP_ENABLED=true
FTP_HOST=127.0.0.1
FTP_PORT=12704
FTP_USER=ftpuser
FTP_PASSWORD=123456
FTP_SECURE=false
FTP_ROOT_PATH=/

# Server
PORT=3000

# Default Admin User (optional - will be created automatically if no admin exists)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=Admin User

# Google OAuth (for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Cập nhật port này cho khớp với port backend đang chạy (3000, 3009, ...)
GOOGLE_CALLBACK_URL=http://localhost:3009/api/auth/google/callback

# Frontend URL (for share links)
FRONTEND_URL=http://localhost:3002

